	/* fix cam0_rst gpio pin for older Galen boards */
	/* below GPIO overlays must be after all sensor board overlays */

	fragment@32 {
		target-path = "/gpio@2200000/camera-control-output-low";
		board_config {
			ids = "<2822-0000-500";
			sw-modules = "kernel";
		};
		__overlay__ {
			gpios = <TEGRA194_MAIN_GPIO(H, 4) 0 CAM0_PWDN 0
					CAM1_RST_L 0 CAM1_PWDN 0>;
			label = "cam0-rst", "cam0-pwdn",
					"cam1-rst", "cam1-pwdn";
		};
	};
	fragment@33 {
		target-path = "/i2c@3180000/tca9546@70/i2c@0/imx185_a@1a";
		board_config {
			ids = "<2822-0000-500";
			sw-modules = "kernel";
		};
		__overlay__ {
			reset-gpios = <&tegra_main_gpio TEGRA194_MAIN_GPIO(H, 4) 0>;
		};
	};

