			remote-endpoint = <&liimx185_csi_out0>;
		};
	};
	/* Enable CSI ports */
	fragment@23 {
		//// target = <&csi_base>;
		target-path = "/host1x@13e00000/nvcsi@15a00000";
		board_config {
