#include <t19x-common-modules/tegra194-camera-e3331-a00.dtsi>
#include "dt-bindings/clock/tegra194-clock.h"

/* camera control gpio definitions */
#define CAM0_RST_L	TEGRA194_MAIN_GPIO(H, 3)
#define CAMERA_I2C_MUX_BUS(x) (0x1E + x)

/* TODO: Re-enable cam1 and cam2*/
/ {
	gpio@2200000 {
		camera-control-output-low {
			gpio-hog;
			output-low;
			gpios = <CAM0_RST_L 0>;
			label = "cam0-rst";
		};
	};

	i2c@3180000 {
		tca9546_70: tca9546@70 {
			compatible = "nxp,pca9546";
			reg = <0x70>;
			#address-cells = <1>;
			#size-cells = <0>;
			vcc-supply = <&e3900_sys_1v8_cvb>;
			skip_mux_detect;
			force_bus_start = <CAMERA_I2C_MUX_BUS(0)>;
			i2c@0 {
				reg = <0>;
				i2c-mux,deselect-on-exit;
				#address-cells = <1>;
				#size-cells = <0>;
				imx318_a@10 {
					clocks = <&bpmp_clks TEGRA194_CLK_EXTPERIPH1>,
						 <&bpmp_clks TEGRA194_CLK_PLLP_OUT0>;
					clock-names = "extperiph1", "pllp_grtba";
					mclk = "extperiph1";
					clock-frequency = <24000000>;
					reset-gpios = <&tegra_main_gpio CAM0_RST_L GPIO_ACTIVE_HIGH>;
					vana-supply = <&e3900_avdd_cam_2v8_cvb>;
					vif-supply = <&e3900_sys_1v8_cvb>;
					vdig-supply = <&e3900_vdd_sys_en>;
				};
			};
		};
	};
};
