/*
 * Device-tree overlay for tegra194-p2888-0001-p2822-0000-overlay.dts for T194 platform.
 */

/dts-v1/;
/plugin/;

/ {
	overlay-name = "Jetson AGX Xavier Overlay Support";
	compatible = "nvidia,tegra194";
	nvidia,dtsfilename = __FILE__;
	nvidia,dtbbuildtime = __DATE__, __TIME__;

	fragment@0 {
		target-path = "/";
		board_config {
			odm-data = "enable-denver-wdt";
		};
		__overlay__ {
			watchdog@30c0000 {
				status = "okay";
			};
		};
	};

	fragment-usb-vbus-en0@1 {
		target-path = "/fixed-regulators/regulator@114";
		delete_prop = "enable-active-high";
		board_config {
			ids = "<2822-0000-400";
		};
	};

	fragment-pcie-c5-ep-enable@2 {
		target-path = "/";
		board_config {
			odm-data = "pcie-c5-endpoint-enable";
		};
		__overlay__ {
			pcie@141a0000 {
				status = "disabled";
			};
			pcie_ep@141a0000 {
				status = "okay";
			};
		};
	};
	fragment-pcie-c1-rp-gen1@3 {
		target-path = "/";
		board_config {
			ids = "<2822-0000-200";
		};
		__overlay__ {
			pcie@14100000 {
				nvidia,max-speed = <1>;
				max-link-speed = <1>;
			};
		};
	};

	fragment-pcie-c1-disable-aspm@4 {
		target-path = "/";
		board_config {
			ids = "<2822-0000-400";
		};

		__overlay__ {
			pcie@14100000 {
				nvidia,disable-aspm-states = <0xf>;
			};
		};
	};

	fragment-pcie-3v3-remove-gpio@5 {
		target-path = "/fixed-regulators/regulator@115";
		delete_prop = "gpio";
		board_config {
			ids = "<2822-0000-400";
		};
	};

	fragment-pcie-12v-remove-gpio@6 {
		target-path = "/fixed-regulators/regulator@116";
		delete_prop = "gpio";
		board_config {
			ids = "<2822-0000-400";
		};
	};
	fragment-tegra-ufs-lane10@3 {
		target-path = "/";
		board_config {
			odm-data = "UFS_x1_L1";
		};

		__overlay__ {
			ufshci@2450000 {
				status = "okay";
			};
		};
	};
};
